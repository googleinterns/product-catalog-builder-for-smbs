<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/scanLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/scan_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:contentDescription="@string/scan"
            app:srcCompat="@drawable/ic_action_scan" />

        <TextView
            android:id="@+id/scan_barcode_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:clickable="false"
            android:text="@string/scan"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ocrLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:contentDescription="@string/scan_text_ocr"
            app:srcCompat="@drawable/ic_action_scan_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:clickable="false"
            android:text="@string/scan_text_ocr"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/upload_from_gallery_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:contentDescription="@string/upload"
            app:srcCompat="@drawable/ic_action_add_image" />

        <TextView
            android:id="@+id/upload_from_gallery_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:clickable="false"
            android:text="@string/upload"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/videoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/upload_video_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:contentDescription="@string/upload_video"
            app:srcCompat="@drawable/ic_action_add_video" />

        <TextView
            android:id="@+id/upload_video_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:clickable="false"
            android:text="@string/upload_video"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/billLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:contentDescription="@string/create_a_bill"
            app:srcCompat="@drawable/ic_action_bill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:clickable="false"
            android:text="@string/create_a_bill"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newOrdersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:contentDescription="@string/new_orders"
            app:srcCompat="@drawable/ic_new_order" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:clickable="false"
            android:text="@string/new_orders"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>